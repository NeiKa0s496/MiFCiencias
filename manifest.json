{
  "manifest_version": 2,
  "name": "MiFciencias",
  "version": "1.0",
  "description": "Extensi√≥n para ver calificaciones de profesores y crear horarios",
  "icons": {
    "16": "icons/palas(16x16).png",
    "48": "icons/palas(48x48).png",
    "96": "icons/palas(96x96).png"
  },
  
  "web_accessible_resources": [
  "schedule.html",
  "schedule.js",
  "schedule-ui.js",
  "style.css",
  "content.js",
  "foreground.js"
],

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://web.fciencias.unam.mx/*",
        "http://www.fciencias.unam.mx/*"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "http://www.fciencias.unam.mx/*",
    "https://web.fciencias.unam.mx/*",
    "https://www.misprofesores.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/palas(48x48).png",
    "default_title": "MiFciencias",
    "default_popup": "schedule.html"
  }
}